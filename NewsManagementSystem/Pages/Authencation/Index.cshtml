@page
@model NewsManagementSystem.Pages.Authentication.IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 400px;">
        <form method="post">
            <h2 class="text-center">Login</h2>
            <div class="mb-3">
                <label asp-for="Login.Username" class="form-label">Username</label>
                <input asp-for="Login.Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Login.Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Login.Password" class="form-label">Password</label>
                <input asp-for="Login.Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Login.Password" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
