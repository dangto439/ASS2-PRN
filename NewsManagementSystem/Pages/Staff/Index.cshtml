@page "{id}"
@model NewsManagementSystem.Pages.Staff.IndexModel
@{
    ViewData["Title"] = "Staff Profile";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Staff Profile</h2>

    <div class="d-flex justify-content-center gap-2 mb-4">
        <a asp-page="/Staff/News" class="btn btn-outline-primary">
            <i class="fas fa-newspaper"></i> News
        </a>
        <a asp-page="/Staff/Category" class="btn btn-outline-success">
            <i class="fas fa-list"></i> Category
        </a>
        <a asp-page="/Staff/ChangePassword" asp-route-id="@Model.Account.AccountId" class="btn btn-warning">
            <i class="fas fa-key"></i> Change Password
        </a>
    </div>

    <hr />

    @if (Model.Account != null)
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <input type="hidden" asp-for="Account.AccountId" />

                            <div class="mb-3">
                                <label asp-for="Account.AccountName" class="form-label fw-bold"></label>
                                <input asp-for="Account.AccountName" class="form-control" />
                                <span asp-validation-for="Account.AccountName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Account.AccountEmail" class="form-label fw-bold"></label>
                                <input asp-for="Account.AccountEmail" type="email" class="form-control" />
                                <span asp-validation-for="Account.AccountEmail" class="text-danger"></span>
                            </div>

                            <input asp-for="Account.AccountRole" type="hidden" />
                            <input type="hidden" asp-for="Account.AccountId" />

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <p class="text-danger text-center fw-bold">Account not found.</p>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
